- title = "Wallet"
!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ name: "microtip", content: "#{wallet.address}" }
    %title #{title}
    =# assets :css

    =# TODO: move in external css
    =# %link{ rel: "stylesheet", src: "antani.css" }
    :css
      body {
        background: #FAFAFA;
        font-family: "Lato","Helvetica Neue",Helvetica,Arial,sans-serif;
      }

      .container {
        width: 90%;
        margin: 0 auto;
      }
      .content {
      }

      a {
        text-decoration: none;
        color: #72B73E;
      }

      h1, h2, h3 {
        color: #72B73E;
      }

      pre {
        display: inline-block;
      }

      .left, .right {
        float: left;
        width: 40%;
        margin-right: 5%;
      }

      .left {

      }

      .right {

      }

      .clear{
        clear: both
      }

      .black a {
        color: black
      }

      .s10{ height: 10px; }
      .s20{ height: 20px; }
      .s30{ height: 30px; }
      .s40{ height: 40px; }
      .s50{ height: 50px; }

      .btn {
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 10px;
        background: #72B73E; /* green */
        border: 1px solid #72B73E;
        color: white;
        font-weight: bold;
        margin-bottom: 10px;
        display: inline-block;
        cursor: pointer;
      }
      .btn:hover {
        background: white;
        color: #72B73E; /* green */
      }

      .main {
        color: #f39f16;
      }

      .main_bg {
        background: #f39f16;
      }

      label, input {
        display: block;
        margin-top: 4px;
        margin-bottom: 10px;
      }

      input {
        padding: 4px 8px;
      }


  %body
    .container
      %h1
        %a{ href: "/" } #{title}
      %nav
        %a.btn{ href: "/receive" } Receive
        %a.btn{ href: "/send" }    Send
      %section.content
        = yield
