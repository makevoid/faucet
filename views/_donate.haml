:css
  /* $green: #72B73E */

  .btn {
    padding: 16px;
    font-size: 18px;
    border-radius: 20px;
    background: #72B73E; /* green */
    border: 1px solid #72B73E;
    color: white;
    font-weight: bold;
    margin-bottom: 10px;
    display: inline-block;
    cursor: pointer;
  }
  .btn:hover {
    background: white;
    color: #72B73E; /* green */
  }
  .circle .b {
    color: #FFF;
    font-size: 60px;
    padding: 12px;
    padding-left: 14px;
    width: 60px;
    margin-left: 50px;
    border-radius: 50%;
    background-color: #f39f16;
    border: 1px solid #f39f16;
    cursor: pointer;
    text-align: center;
  }
  .circle .b:hover {
    background-color: white;
    color: #f39f16;
  }
  .left .address {
    width: 200px;
    word-wrap: break-word;
    text-align: center;
  }

